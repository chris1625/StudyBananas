<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.creategroup.CreateGroupFragment"
    android:orientation="vertical"
    android:id="@+id/fragment_create_group">

    <!-- TODO: Update createGroup fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_group_form">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_create_form">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/pick_class"
                    android:hint="pick class"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/start_time_layout">

                <TextView
                    android:text="Start Time:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_time_text"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

                <Button
                    android:text="Select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_time_button"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/end_time_layout">

                <TextView
                    android:text="End Time: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_time_text"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

                <Button
                    android:text="Select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_time_button"
                    android:layout_weight="0.90" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/max_people_layout">

                <TextView
                    android:text="Max Members:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/max_people_text"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

                <Button
                    android:text="Select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/max_people_button"
                    android:layout_weight="1.25" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Create Group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/new_group_button"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/description_text"
                    android:hint="description"
                    android:outlineProvider="paddedBounds"
                    android:background="@android:drawable/zoom_plate"
                    tools:minLines="5" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
