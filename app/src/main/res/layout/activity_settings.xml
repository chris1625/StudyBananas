<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <TextView
        android:text="   Notifications"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.04"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textAllCaps="false" />

    <Switch
        android:text="     Enable/disable all"
        android:paddingRight = "10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch6"
        android:textSize="16sp"
        android:layout_weight="0.07"
        android:theme="@style/SCBSwitch"
        android:checked="true" />

    <Switch
        android:text="     When member joins group"
        android:paddingRight = "10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch10"
        android:textSize="16sp"
        android:layout_weight="0.07"
        android:theme="@style/SCBSwitch"
        android:checked="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight = "10dp"
        android:id="@+id/switch9"
        android:textSize="16sp"
        android:layout_weight="0.07"
        android:checked="true"
        android:theme="@style/SCBSwitch"
        android:text="     When member leaves group" />

    <Switch
        android:text="     When group info changes"
        android:paddingRight = "10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch8"
        android:textSize="16sp"
        android:layout_weight="0.10"
        android:theme="@style/SCBSwitch"
        android:checked="true" />
    <!-- filler -->
    <TextView android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight=".6" />


    <Button
        android:id="@+id/secret_button"
        android:text=""
        android:paddingRight = "10dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:textSize="16sp"
        android:background="#00000000"
        android:layout_weight="0" />

    <ToggleButton
        android:id="@+id/secret_toggle_button"
        android:textOff="Enable Super Secret Message"
        android:textOn="Disable Super Secret Message"
        android:paddingRight = "10dp"
        android:layout_marginBottom = "10sp"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:checked="false"
        android:background="@drawable/secret_btn_toggle"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_weight="0" />

</LinearLayout>